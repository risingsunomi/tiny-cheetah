Screen {
    background: #08131f;
    color: $text;
}

#path-root {
    layout: vertical;
    height: 1fr;
    padding: 1;
}

#path-title {
    text-style: bold;
    margin-bottom: 1;
}

#path-graph {
    layout: horizontal;
    height: 6;
    min-height: 6;
    border: round $primary;
    padding: 1;
    background: #0b1e33;
    margin-bottom: 1;
    overflow-x: auto;
    align: center middle;
}

.graph-node {
    min-width: 16;
    padding: 1;
    text-align: center;
    border: round #1e3a5c;
    margin-right: 1;
    background: #112845;
}

.graph-node.selected {
    border: round $accent;
    background: #1e3a5c;
}

.graph-node.repeat {
    background: #2a1b3d;
}

.graph-node.status-running {
    border: round #3bd6ee;
}

.graph-node.status-complete {
    border: round #00ff00;
}

.graph-node.status-stopped {
    border: round #ffaa00;
}

.graph-connector {
    margin-right: 1;
    color: #3bd6ee;
    align: center middle;
}

.graph-empty {
    color: $text-muted;
}

#path-list {
    height: 1fr;
    border: round $primary;
    background: $surface-darken-1;
    padding: 1;
    margin-bottom: 1;
}

#path-feedback {
    min-height: 1;
    color: $text-muted;
    margin-bottom: 1;
}

#path-actions {
    layout: horizontal;
    margin-bottom: 1;
}

#path-actions Button {
    margin-right: 1;
}

#path-actions Button:last-child {
    margin-right: 0;
}

#path-footer {
    layout: horizontal;
    align: right middle;
}

#path-footer Button#path-save {
    margin-left: 1;
}

ModalScreen#node-step-modal,
ModalScreen#path-confirm-modal {
    align: center middle;
}

#node-step-modal-container,
#path-confirm-modal-container {
    background: $surface;
    border: round $primary;
    width: 70%;
    max-width: 80;
    padding: 1 2;
    layout: vertical;
}

#node-step-title,
#path-confirm-title {
    text-align: center;
    text-style: bold;
    margin-bottom: 1;
}

#node-step-name {
    width: 100%;
}

#node-step-buttons,
#path-confirm-buttons {
    layout: horizontal;
    align: right middle;
    margin-top: 1;
}

#node-step-buttons Button#node-step-confirm,
#path-confirm-buttons Button#path-confirm-accept {
    margin-left: 1;
}
